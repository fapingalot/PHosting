{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"]
    },

    "sourceMap": true,
    "declaration": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,

    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",

    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  }
}
